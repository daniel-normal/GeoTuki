<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333232"
    tools:context=".OptionActivity">
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/regular_variable"
        android:text="Elija una opciÃ³n"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/CDcalculator"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:background="@drawable/grayshape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        android:orientation="vertical">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="175dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shapes" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:background="@drawable/custom1"
            android:fontFamily="@font/regular_variable"
            android:text="Figuras en un plano 2D"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/CDformula"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:background="@drawable/grayshape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CDcalculator"
        android:orientation="vertical">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/bodies" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:background="@drawable/custom2"
            android:fontFamily="@font/regular_variable"
            android:text="Figuras en un plano 3D"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="italic|bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>