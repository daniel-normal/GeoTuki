<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333232"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HexagonA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular hexágono"
        android:fontFamily="@font/regular_variable"
        android:textColor="#ffffff"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular_variable"
            android:text="Lado:"
            android:layout_marginEnd="100sp"
            android:textSize="25sp"
            android:textColor="#ffff">
        </TextView>
        <EditText
            android:id="@+id/side"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:background="#ffff"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular_variable"
            android:gravity="center"
            android:layout_marginStart="80dp">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular_variable"
            android:text="Área:"
            android:layout_marginEnd="100sp"
            android:textSize="25sp"
            android:textColor="#ffff">
        </TextView>
        <EditText
            android:id="@+id/area"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:background="#ffff"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular_variable"
            android:gravity="center"
            android:layout_marginStart="80dp">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular_variable"
            android:text="Perímetro:"
            android:layout_marginEnd="100sp"
            android:textSize="25sp"
            android:textColor="#ffff">
        </TextView>
        <EditText
            android:id="@+id/perimeter"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:background="#ffff"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular_variable"
            android:gravity="center"
            android:layout_marginStart="20dp">
        </EditText>
    </LinearLayout>
    <Button
        android:id="@+id/btncalculate"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30sp"
        android:background="@drawable/degraded"
        android:fontFamily="@font/regular_variable"
        android:text="Calcular"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btnreset"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30sp"
        android:background="@drawable/degraded"
        android:fontFamily="@font/regular_variable"
        android:text="Reiniciar"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnback"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30sp"
        android:background="@drawable/degraded2"
        android:fontFamily="@font/regular_variable"
        android:text="Atrás"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"/>
</LinearLayout>