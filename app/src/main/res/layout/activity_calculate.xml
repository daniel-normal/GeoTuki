<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#333232"
    tools:context=".Calculate">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Cálculo de figuras"
        android:fontFamily="@font/regular_variable"
        android:textColor="#FFFFFF"
        android:textSize="35dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:background="@drawable/grayshape3"
        android:fontFamily="@font/regular_variable"
        android:layout_gravity="center"
        android:text="Triángulo"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:background="@drawable/grayshape3"
        android:fontFamily="@font/regular_variable"
        android:layout_gravity="center"
        android:text="Rectángulo"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:background="@drawable/grayshape3"
        android:fontFamily="@font/regular_variable"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:text="Círculo"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:background="@drawable/grayshape3"
        android:fontFamily="@font/regular_variable"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:text="Cuadrado"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:background="@drawable/grayshape3"
        android:fontFamily="@font/regular_variable"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:text="Pentágono"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:background="@drawable/grayshape3"
        android:fontFamily="@font/regular_variable"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:text="Hexágono"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/button7"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30sp"
        android:background="@drawable/degraded2"
        android:fontFamily="@font/regular_variable"
        android:text="Atrás"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"/>
</LinearLayout>